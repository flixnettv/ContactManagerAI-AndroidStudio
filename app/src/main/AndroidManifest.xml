<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- FlixFlash Contact Manager AI Permissions -->
    
    <!-- Phone & SMS Permissions -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ANSWER_PHONE_CALLS" />
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.WRITE_CALL_LOG" />
    <uses-permission android:name="android.permission.ADD_VOICEMAIL" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    
    <!-- Contacts Permissions -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    
    <!-- Audio & Voice Permissions -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    
    <!-- Storage Permissions -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" 
        tools:ignore="ScopedStorage" />
    
    <!-- Network Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    
    <!-- System Permissions -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    
    <!-- TelecomManager for call handling -->
    <uses-permission android:name="android.permission.BIND_TELECOM_CONNECTION_SERVICE" />
    <uses-permission android:name="android.permission.CONTROL_INCALL_EXPERIENCE" />
    
    <!-- Accessibility for call screening (Android 10+) -->
    <uses-permission android:name="android.permission.BIND_SCREENING_SERVICE" />

    <!-- Required features -->
    <uses-feature android:name="android.hardware.telephony" android:required="true" />
    <uses-feature android:name="android.hardware.microphone" android:required="true" />
    <uses-feature android:name="android.hardware.audio.output" android:required="true" />

    <application
        android:name=".FlixFlashApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_flixflash_launcher"
        android:label="${app_name}"
        android:roundIcon="@mipmap/ic_flixflash_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FlixFlashContactManager"
        android:hardwareAccelerated="true"
        android:largeHeap="true"
        tools:targetApi="31">

        <!-- FlixFlash Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="${app_name}"
            android:theme="@style/Theme.FlixFlashContactManager.Splash"
            android:screenOrientation="portrait"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
            <!-- Handle contact views -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="vnd.android.cursor.item/contact" />
            </intent-filter>
            
            <!-- Handle phone numbers -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="tel" />
            </intent-filter>
        </activity>

        <!-- FlixFlash AI Call Service -->
        <service
            android:name=".services.FlixFlashAICallService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="phoneCall|microphone" />

        <!-- FlixFlash Call Screening Service (Android 10+) -->
        <service
            android:name=".services.FlixFlashCallScreeningService"
            android:permission="android.permission.BIND_SCREENING_SERVICE"
            android:exported="true">
            <intent-filter>
                <action android:name="android.telecom.CallScreeningService" />
            </intent-filter>
        </service>

        <!-- FlixFlash Incoming Call Receiver -->
        <receiver
            android:name=".receivers.FlixFlashIncomingCallReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
        </receiver>

        <!-- FlixFlash SMS Receiver -->
        <receiver
            android:name=".receivers.FlixFlashSmsReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter android:priority="1000">
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

        <!-- FlixFlash Contact Sync Service -->
        <service
            android:name=".services.FlixFlashContactSyncService"
            android:enabled="true"
            android:exported="false" />

        <!-- FlixFlash Spam Detection Service -->
        <service
            android:name=".services.FlixFlashSpamDetectionService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <!-- FlixFlash Egyptian AI Service -->
        <service
            android:name=".services.FlixFlashEgyptianAIService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="microphone" />

        <!-- Content Provider for contacts -->
        <provider
            android:name=".providers.FlixFlashContactProvider"
            android:authorities="${applicationId}.contacts"
            android:exported="false" />

        <!-- Work Manager for background tasks -->
        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false"
            tools:node="merge">
            <meta-data
                android:name="androidx.work.WorkManagerInitializer"
                android:value="androidx.startup"
                tools:node="remove" />
        </provider>

        <!-- FlixFlash App Metadata -->
        <meta-data
            android:name="com.flixflash.app.name"
            android:value="Contact Manager AI" />
        <meta-data
            android:name="com.flixflash.company"
            android:value="FlixFlash Technologies" />
        <meta-data
            android:name="com.flixflash.version"
            android:value="1.0.0" />
        <meta-data
            android:name="com.flixflash.build"
            android:value="100" />
        <meta-data
            android:name="com.flixflash.ai.egyptian"
            android:value="true" />
        <meta-data
            android:name="com.flixflash.features"
            android:value="ai_calls,spam_detection,caller_id,contact_management,voice_recording" />

    </application>

</manifest>